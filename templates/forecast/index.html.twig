{% extends 'base.html.twig' %}

{% block title %}Forecast index{% endblock %}

{% block body %}
    <h1>Forecast index</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="d-none d-md-table-cell">Id</th>
                    <th>Date</th>
                    <th>TemperatureC</th>
                    <th>Humidity</th>
                    <th>UvIndex</th>
                    <th>WindSpeed</th>
                    <th>WindDirection</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for forecast in forecasts %}
                <tr>
                    <td class="d-none d-md-table-cell">{{ forecast.id }}</td>
                    <td>{{ forecast.date ? forecast.date|date('Y-m-d') : '' }}</td>
                    <td>{{ forecast.temperatureC }}</td>
                    <td>{{ forecast.humidity }}</td>
                    <td>{{ forecast.uvIndex }}</td>
                    <td>{{ forecast.windSpeed }}</td>
                    <td>{{ forecast.windDirection }}</td>
                    <td>
                        {% if is_granted('ROLE_FORECAST_SHOW') %}
                            <a href="{{ path('app_forecast_show', {'id': forecast.id}) }}" class="btn btn-sm btn-info">show</a>
                        {% endif %}
                        {% if is_granted('ROLE_FORECAST_EDIT') %}
                            <a href="{{ path('app_forecast_edit', {'id': forecast.id}) }}" class="btn btn-sm btn-primary">edit</a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% if is_granted('ROLE_FORECAST_NEW') %}
        <a href="{{ path('app_forecast_new') }}" class="btn btn-success">Create new</a>
    {% endif %}
{% endblock %}
